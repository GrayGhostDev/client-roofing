# =============================================================================
# Streamlit Cloud Secrets Configuration - EXAMPLE TEMPLATE
# iSwitch Roofs CRM
# TOML v1.0.0 Specification: https://toml.io/en/v1.0.0
# =============================================================================
# INSTRUCTIONS:
# 1. Copy this file to: .streamlit/secrets.toml
# 2. Replace placeholder values with your actual credentials
# 3. Never commit secrets.toml to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase Authentication (REQUIRED)
# Get these from: https://supabase.com/dashboard → Project Settings → API
# -----------------------------------------------------------------------------
SUPABASE_URL = "https://your-project-id.supabase.co"
SUPABASE_KEY = "your-supabase-anon-key-here"

# Alternative lowercase keys (for backward compatibility)
supabase_url = "https://your-project-id.supabase.co"
supabase_key = "your-supabase-anon-key-here"

# -----------------------------------------------------------------------------
# Backend API Configuration
# -----------------------------------------------------------------------------
# Production Backend (Render.com or your hosting platform)
api_base_url = "https://your-backend-api.onrender.com"
ml_api_base_url = "https://your-backend-api.onrender.com"

# Local Development Backend (Uncomment for local testing)
# api_base_url = "http://localhost:8001"
# ml_api_base_url = "http://localhost:8001"

# Backend API URL (uppercase alternative)
BACKEND_API_URL = "https://your-backend-api.onrender.com"

# -----------------------------------------------------------------------------
# Pusher Configuration (Realtime Features)
# Get these from: https://dashboard.pusher.com → App Keys
# -----------------------------------------------------------------------------
pusher_app_id = "your-pusher-app-id"
pusher_key = "your-pusher-key"
pusher_secret = "your-pusher-secret"
pusher_cluster = "us2"

# Uppercase alternatives
PUSHER_APP_ID = "your-pusher-app-id"
PUSHER_KEY = "your-pusher-key"
PUSHER_SECRET = "your-pusher-secret"
PUSHER_CLUSTER = "us2"

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Development Mode - Set to "false" for production
BYPASS_AUTH = "false"

# Environment
ENVIRONMENT = "production"

# =============================================================================
# Setup Instructions
# =============================================================================
#
# FOR LOCAL DEVELOPMENT:
# 1. Copy this file to .streamlit/secrets.toml
# 2. Fill in your credentials
# 3. File is automatically ignored by git
#
# FOR STREAMLIT CLOUD:
# 1. Go to https://share.streamlit.io/
# 2. Select your app
# 3. Click Settings → Secrets
# 4. Copy contents of your secrets.toml file
# 5. Paste into the secrets editor
# 6. Click "Save"
#
# =============================================================================
# Where to Get Credentials
# =============================================================================
#
# SUPABASE:
# - Dashboard: https://supabase.com/dashboard
# - Select your project
# - Go to Settings → API
# - Copy "Project URL" and "anon/public" key
#
# PUSHER:
# - Dashboard: https://dashboard.pusher.com
# - Select your app
# - Go to "App Keys" tab
# - Copy app_id, key, secret, and cluster
#
# BACKEND API:
# - Your deployed backend URL (Render, Heroku, AWS, etc.)
# - Example: https://your-app-name.onrender.com
#
# =============================================================================
