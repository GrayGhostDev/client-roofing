# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# Flask Configuration
FLASK_APP=backend/app/__init__.py
FLASK_ENV=development
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://postgres:[password]@db.your-project.supabase.co:5432/postgres

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# Sentry Configuration
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development

# Email Configuration (SendGrid/Mailgun)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@iswitchroofs.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X
GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-zone-id

# UptimeRobot Configuration
UPTIMEROBOT_API_KEY=your-uptimerobot-api-key

# Pusher Configuration (Real-time)
PUSHER_APP_ID=your-pusher-app-id
PUSHER_KEY=your-pusher-key
PUSHER_SECRET=your-pusher-secret
PUSHER_CLUSTER=us2

# AccuLynx CRM Integration (if available)
