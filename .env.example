# Response Time Targets (in seconds)
TARGET_RESPONSE_TIME=120
EMERGENCY_RESPONSE_TIME=300

# Business Hours
BUSINESS_HOURS_START=08:00
BUSINESS_HOURS_END=18:00
BUSINESS_TIMEZONE=America/Detroit
