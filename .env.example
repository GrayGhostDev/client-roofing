CALLRAIL_API_KEY=your-callrail-api-key
CALLRAIL_ACCOUNT_ID=your-account-id
CALLRAIL_COMPANY_ID=your-company-id

# BirdEye Configuration
BIRDEYE_API_KEY=your-birdeye-api-key
BIRDEYE_BUSINESS_ID=your-business-id

# Google Local Services Ads
GOOGLE_LSA_API_KEY=your-lsa-api-key

# Redis Configuration (if using caching)
