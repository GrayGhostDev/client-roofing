# iSwitch Roofs CRM - Production Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env with real secrets to version control

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://user:password@host:5432/database
SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
SUPABASE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-32-characters
JWT_SECRET_KEY=your-jwt-secret-key-here-32-characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ============================================
# REAL-TIME MESSAGING (PUSHER)
# ============================================
PUSHER_APP_ID=1234567
PUSHER_KEY=xxxxxxxxxxxxxxxxxx
PUSHER_SECRET=xxxxxxxxxxxxxxxxxx
PUSHER_CLUSTER=us2

# ============================================
# REDIS CACHE CONFIGURATION
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
# Generate with: openssl rand -base64 32
REDIS_PASSWORD=your-secure-redis-password
REDIS_DB=0

# ============================================
# API CONFIGURATION
# ============================================
API_V1_PREFIX=/api/v1
BACKEND_CORS_ORIGINS=["https://yourdomain.com","https://crm.yourdomain.com"]
API_RATE_LIMIT=100
API_RATE_LIMIT_PERIOD=60

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=noreply@yourdomain.com
SMTP_TLS=True
SMTP_SSL=False

# ============================================
# ENVIRONMENT SETTINGS
# ============================================
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO
TESTING=False

# ============================================
# FRONTEND CONFIGURATION
# ============================================
BACKEND_API_URL=https://api.yourdomain.com
BACKEND_API_TIMEOUT=30
CACHE_TTL_SECONDS=300
ENABLE_CACHING=true

# ============================================
# STREAMLIT CONFIGURATION
# ============================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true
STREAMLIT_SERVER_ENABLE_CORS=false

# ============================================
# MONITORING & LOGGING
# ============================================
SENTRY_DSN=https://xxxxxxxxxxxxx@sentry.io/xxxxxxxxxxxxx
LOG_FILE_PATH=/app/logs/application.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_REAL_TIME_UPDATES=true
ENABLE_AI_SEARCH=true
ENABLE_CHATBOT=true
ENABLE_VOICE_TRANSCRIPTION=true
ENABLE_SALES_AUTOMATION=true

# ============================================
# PERFORMANCE TUNING
# ============================================
WORKERS=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# ============================================
# BACKUP CONFIGURATION
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DESTINATION=s3://your-bucket/backups/

# ============================================
# THIRD-PARTY INTEGRATIONS
# ============================================
# Add any third-party API keys here
# GOOGLE_MAPS_API_KEY=xxxxxxxxxxxxx
# STRIPE_API_KEY=xxxxxxxxxxxxx
# TWILIO_ACCOUNT_SID=xxxxxxxxxxxxx
# TWILIO_AUTH_TOKEN=xxxxxxxxxxxxx
